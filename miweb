#!/usr/bin/bash

miweb="$1"

if [ -z $miweb ]; then
  echo "miweb <nombre>"
  exit
fi

if [ -d $miweb ]; then
  echo "ERROR el fichero ya existe"
  exit
fi

mkdir -p $miweb/css $miweb/img $miweb/js;
touch $miweb/index.html $miweb/css/main.css $miweb/js/main.js
cat <<EOF >> $miweb/index.html
<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="author" content="David Soliman Escobar" />
<title></title>
<link rel="stylesheet" href="css/main.css">
</head>
<body>
<script src='js/main.js'></script>
</body>
</html>
EOF
cd $miweb
git init
wget https://necolas.github.io/normalize.css/8.0.1/normalize.css
mv normalize.css css/
> k.sh
cat <<EOF >> k.sh
#!/usr/bin/bash
nvim index.html css/main.css js/main.css css/normalize.css 
EOF
chmod +x k.sh
